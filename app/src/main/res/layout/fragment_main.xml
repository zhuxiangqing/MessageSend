<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.zhuxiangqing.messageforwarder.ui.main.MainViewModel" />
    </data>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/card_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="@{viewModel.numberHadSaved?false:true}"
                    android:hint="@string/fragment_main_edt_card1_text"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:onTextChanged="@{(s,a,b,c)->viewModel.onCardOneChanged(s)}"
                    android:singleLine="true"
                    android:text="@={viewModel.card1}" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/card_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="@{viewModel.numberHadSaved?false:true}"
                    android:hint="@string/fragment_main_edt_card2_text"
                    android:imeActionId="6"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:onTextChanged="@{(s,a,b,c)->viewModel.onCardTwoChanged(s)}"
                    android:singleLine="true"
                    android:text="@={viewModel.card2}" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/clear_card_num"
                    style="?android:textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:onClick="@{()->viewModel.onNumClearClick()}"
                    android:text="清空号码"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/email_sign_in_button"
                    style="?android:textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:enabled="@{viewModel.submitEnabled}"
                    android:onClick="@{()->viewModel.onSubmitClick()}"
                    android:text="设置卡1 卡2 电话"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</layout>